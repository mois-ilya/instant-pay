{
  "name": "@tonkeeper/instantpay-protocol",
  "version": "1.0.0",
  "description": "JSON Schema definitions and TypeScript type generation for InstantPay protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run generate-types && tsc",
    "generate-types": "node scripts/generate-types.js",
    "dev": "npm run generate-types && tsc --watch",
    "clean": "rm -rf dist src/types/schema-types.generated.ts"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^15.0.4",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "schemas"
  ],
  "keywords": [
    "tonkeeper",
    "instant-pay",
    "protocol",
    "types"
  ],
  "license": "MIT"
}
