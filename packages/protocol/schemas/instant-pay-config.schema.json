{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Config",
    "title": "Config",
    "description": "Configuration object containing wallet limits, network info, and available options",
    "type": "object",
    "definitions": {
        "Network": {
            "type": "string",
            "enum": ["mainnet", "testnet"],
            "description": "TON network identifier"
        },
        "PayLabel": {
            "type": "string",
            "enum": ["buy", "unlock", "use", "get", "open", "start", "retry", "show", "play", "try"],
            "description": "Button label for payment action"
        }
    },
    "properties": {
        "network": {
            "$ref": "#/definitions/Network"
        },
        "tonLimit": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)?$",
            "description": "Maximum TON amount for instant payments (decimal string)"
        },
        "jettons": {
            "type": "array",
            "description": "List of supported jettons with their limits",
            "items": {
                "type": "object",
                "properties": {
                    "symbol": {
                        "type": "string",
                        "description": "Human-readable jetton symbol (e.g., 'USDT')"
                    },
                    "address": {
                        "type": "string",
                        "pattern": "^[A-Za-z0-9+/=_-]+$",
                        "description": "Jetton master contract address"
                    },
                    "decimals": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 18,
                        "description": "Number of decimal places for the jetton"
                    },
                    "limit": {
                        "type": "string",
                        "pattern": "^\\d+(\\.\\d+)?$",
                        "description": "Maximum jetton amount for instant payments (decimal string)"
                    }
                },
                "required": [
                    "symbol",
                    "address",
                    "decimals",
                    "limit"
                ],
                "additionalProperties": false
            }
        },
        "labels": {
            "type": "array",
            "description": "Available button labels for payment actions",
            "items": {
                "$ref": "#/definitions/PayLabel"
            },
            "uniqueItems": true
        }
    },
    "required": ["network", "limitTon", "jettons", "labels"],
    "additionalProperties": false
}
