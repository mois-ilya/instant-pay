{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {"path": "../../packages/protocol"},
    {"path": "../../packages/sdk"}
  ]
}