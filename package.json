{
  "name": "instant-pay",
  "version": "0.1.0",
  "description": "InstantPay 1.0 SDK & Samples - Browser interaction protocol for Tonkeeper wallet",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src apps/*/src --ext .ts,.tsx",
    "clean": "rm -rf packages/*/dist apps/*/dist packages/*/node_modules apps/*/node_modules node_modules",
    "demo": "npm run dev --workspace=demo-dapp"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["tonkeeper", "instant-pay", "ton", "blockchain", "wallet"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonkeeper/instant-pay.git"
  }
}
