{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@tonkeeper/instantpay-protocol": ["./packages/protocol/src"],
      "@tonkeeper/instantpay-sdk": ["./packages/sdk/src"],
      "mock-wallet": ["./apps/mock-wallet/src"],
      "demo-dapp": ["./apps/demo-dapp/src"]
    }
  },
  "include": ["packages/*/src", "apps/*/src"],
  "references": [
    {"path": "./packages/protocol"},
    {"path": "./packages/sdk"},
    {"path": "./apps/mock-wallet"},
    {"path": "./apps/demo-dapp"}
  ]
}